<?xml version="1.0" encoding="UTF-8"?>
<web-app version="3.1" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd">
    <servlet>
        <servlet-name>ProfileController</servlet-name>
        <servlet-class>team3.controller.ProfileController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>UpdateProfileController</servlet-name>
        <servlet-class>team3.controller.UpdateProfileController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>RecipeManagementController</servlet-name>
        <servlet-class>team3.controller.RecipeManagementController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>CreateRecipeController</servlet-name>
        <servlet-class>team3.controller.CreateRecipeController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>UpdateRecipeServlet</servlet-name>
        <servlet-class>team3.controller.UpdateRecipeServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>DeleteRecipeController</servlet-name>
        <servlet-class>team3.controller.DeleteRecipeController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>HeathyRecipeController</servlet-name>
        <servlet-class>team3.controller.HeathyRecipeController</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>ProfileController</servlet-name>
        <url-pattern>/ProfileController</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>UpdateProfileController</servlet-name>
        <url-pattern>/UpdateProfileController</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>RecipeManagementController</servlet-name>
        <url-pattern>/RecipeManagementController</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>CreateRecipeController</servlet-name>
        <url-pattern>/CreateRecipeController</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>UpdateRecipeServlet</servlet-name>
        <url-pattern>/UpdateRecipeServlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>DeleteRecipeController</servlet-name>
        <url-pattern>/DeleteRecipeController</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>HeathyRecipeController</servlet-name>
        <url-pattern>/HeathyRecipeController</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
    <welcome-file-list>
        <welcome-file>DispatchController</welcome-file>
    </welcome-file-list>
</web-app>
